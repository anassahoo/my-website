pipeline {
    agent any
    
    environment {
        NETLIFY_SITE_ID = credentials('netlify-token-site')
        NETLIFY_AUTH_TOKEN = credentials('netlify-token')
    }
    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/anassahoo/my-website.git'
            }
        }
        
        stage('Deploy to Netlify') {
            steps {
                script {
                    docker.image('node:20-alpine').inside('-u root:root') {
                        sh '''
                            echo "Installing Netlify CLI..."
                            npm install -g netlify-cli
                            
                            echo "Deploying to Netlify..."
                            netlify deploy --prod --dir=. --auth=$NETLIFY_AUTH_TOKEN --site=$NETLIFY_SITE_ID
                        '''
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo '✅ Pipeline succeeded! Your site is deployed to Netlify!'
        }
        failure {
            echo '❌ Pipeline failed. Check logs.'
        }
    }
}