pipeline {
    agent any
    
    environment {
        NETLIFY_SITE_ID = credentials('netlify-token')
        NETLIFY_AUTH_TOKEN = credentials('cca50abf-c688-433b-b11b-825d72980ef4')
    }
    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/anassahoo/my-website.git'
            }
        }
        
        stage('Install Dependencies & Deploy') {
            steps {
                script {
                    docker.image('node:20-alpine').inside('-u root:root') {
                        sh '''
                            npm install
                            npm install -g netlify-cli
                            npm run build || echo "No build script found"
                            netlify deploy --prod --dir=. --auth=$NETLIFY_AUTH_TOKEN --site=$NETLIFY_SITE_ID
                        '''
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo '✅ Pipeline succeeded!'
        }
        failure {
            echo '❌ Pipeline failed. Check logs.'
        }
    }
}