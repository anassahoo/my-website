pipeline {
    agent any
    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/anassahoo/my-website.git'
            }
        }
        
        stage('Test Docker') {
            steps {
                script {
                    docker.image('node:20-alpine').inside('-u root:root') {
                        sh '''
                            echo "Testing Docker..."
                            node --version
                            npm --version
                            echo "Docker is working!"
                        '''
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo '✅ Pipeline succeeded!'
        }
        failure {
            echo '❌ Pipeline failed. Check logs.'
        }
    }
}